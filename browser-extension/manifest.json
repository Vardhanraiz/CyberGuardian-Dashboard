{
  "manifest_version": 3,
  "name": "CyberGuardian Assistant",
  "version": "1.0",
  "description": "Real-time password hygiene tips and 2FA reminders powered by CyberGuardian.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CyberGuardian Assistant"
  },
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
